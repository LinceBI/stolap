	<developers>
		<developer>
			<id>pedrogutierrez</id>
			<name>Pedro J. Gutierrez</name>
			<email>pedro.gutierrez@intryo.com</email>
			<roles>
				<role>Developer</role>
			</roles>
			<timezone>+1</timezone>
