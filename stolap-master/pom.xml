		<repository>
			<id>central</id>
			<url>https://repo1.maven.org/maven2/</url>
		</repository>
		<repository>
			<id>pentaho-public</id>
			<url>https://repo.stratebi.com/repository/pentaho-mvn/</url>
		</repository>
	</repositories>

